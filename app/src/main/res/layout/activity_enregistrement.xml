<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enregistrement"
    android:background="@drawable/restau2">

    <TextView
        android:id="@+id/Enregistrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Enregistrer"
        android:textSize="35dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/nomClient1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Enregistrer"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_perm_identity_24"
        android:drawablePadding="10dp"
        android:hint="Nom client"
        android:background="#EAC896 "
        android:inputType="textPersonName"
        android:padding="20dp" />
    <EditText
        android:id="@+id/password1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomClient1"
        android:layout_margin="10dp"
        android:layout_marginStart="45dp"
        android:hint="mot de passe"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:background="#EAC896 "
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/mail"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password1"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/baseline_markunread_24"
        android:drawablePadding="10dp"
        android:hint="Mail"
        android:background="#EAC896 "
        android:inputType="textEmailAddress"
        android:padding="20dp" />
    <EditText
        android:id="@+id/num"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail"
        android:layout_margin="10dp"
        android:layout_marginStart="45dp"
        android:hint="Numero protable"
        android:inputType="number"
        android:padding="20dp"
        android:background="#EAC896 "
        android:drawableLeft="@drawable/baseline_mobile_friendly_24"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/connecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#7C240C "
        android:text="enregester" />


</RelativeLayout>